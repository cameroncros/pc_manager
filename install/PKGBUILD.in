pkgname="pc_manager"
pkgver="@CPACK_PACKAGE_VERSION_MAJOR@.@CPACK_PACKAGE_VERSION_MINOR@.@CPACK_PACKAGE_VERSION_PATCH@"
pkgrel="1"
pkgdesc="PC Manager - Connect a PC to Homeassistant via MQTT"
arch=("x86_64" "x86" "arm" "arm64")
licence=("GPL3")
source=("git+https://github.com/cameroncros/pc_manager.git#@GIT_HASH@"
        "git+https://github.com/eclipse/paho.mqtt.c.git"
        "git+https://github.com/json-c/json-c.git")
sha512sums=('SKIP'
            'SKIP'
            'SKIP')

build() {
    git submodule init
    git config submodule.external/paho.mqtt.c.url "$srcdir/paho.mqtt.c"
    git config submodule.external/json-c.url "$srcdir/json-c"
    git submodule update --init

    cmake -B build -S "pc_manager"
    cmake --build build
}

check() {
    ctest --test-dir build --output-on-failure
}

package() {
    DESTDIR="$pkgdir" cmake --install build
}

post_install() {
    systemd enable --now pc_manager
    echo "To configure, edit `/etc/pc_manager.json`"
}
